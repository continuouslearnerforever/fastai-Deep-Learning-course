// SLIDER TABS INSIDE EACH
jQuery(function(){

var container = jQuery('.home-featured');
var tabs = container.find('.tab');
var links = container.find('.tabs-nav a');
var currentTabID = null;
var currentTabIndex = null;
var rotationInterval = null;
var rotationSpeed = 5000; // ms

var openTab = function(id){
	if (id === currentTabID) return;
	tabs.removeClass('is-visible');
	links.removeClass('highlighted');
	tabs.filter('#' + id).addClass('is-visible');
	links.filter('[href=#' + id + ']').addClass('highlighted');
	currentTabID = id;
	for (var i = 0; i < tabs.length; i++) {
		if (tabs.eq(i).attr('id') === id) {
			currentTabIndex = i;
			break;
		}
	}
}
var startRotation = function(){
	if (rotationInterval === null) {
		rotationInterval = window.setInterval(function(){
			openTab(tabs.eq(currentTabIndex === tabs.length - 1 ? 0 : currentTabIndex + 1).attr('id'));
		}, rotationSpeed);
	}
};
var stopRotation = function(){
	if (rotationInterval !== null) {
		window.clearInterval(rotationInterval);
		rotationInterval = null;
	}
};

links.click(function(e){
	e.preventDefault();
	stopRotation();
	openTab(jQuery(e.currentTarget).attr('href').substr(1));
});
tabs.click(function(){
	stopRotation();
});

startRotation();
openTab(tabs.eq(0).attr('id'));

});

